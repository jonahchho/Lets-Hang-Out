<form class="form-signin" id="signup-form" action="/users/register" method="POST">
  <h1 class="h3 mb-3 font-weight-normal">Please Register</h1>
  <input type="text" id="username" name="username" class="form-control" placeholder="Username" required="" autofocus="" value=<%= typeof username != 'undefined' ? username : '' %>>
  <input type="email" id="email" name="email" class="form-control" placeholder="Email address" required="" value=<%= typeof email != 'undefined' ? email : '' %>>
  <input type="password" id="password" name="password" class="form-control" placeholder="Password" required="" value=<%= typeof password != 'undefined' ? password : '' %>>
  <input type="password" id="passwordConf" name="passwordConf" class="form-control" placeholder="Confirm Password" required="" value=<%= typeof passwordConf != 'undefined' ? passwordConf : '' %>>
  <button class="btn btn-lg btn-primary btn-block" id="registerSubmitBtn" type="submit">Register</button>
  <div class="row">
    <div class="col-lg-12">
      <div class="text-center">
        <p class="forgot-password">Have an account? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
  <% include ./partials/messages %>
</form>
